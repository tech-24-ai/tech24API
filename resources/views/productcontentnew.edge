    crossorigin="anonymous"
    />
    <title>{{ title }}</title>
    <style>
      /* Styles go here */
      @media print {
        * {
        -webkit-print-color-adjust: exact !important;
        }
      }
      * {
        font-family: "Mulish", sans-serif;
      }
      .header {
      width:100%;
      height:80px;
      display: flex;
      align-items:center;
      justify-content: space-between;
      background-color:#CBC3E3;
      padding:0 50px;
      color:gray;
     }
     
      .page-header-space {
        height: 80px;
        padding:0 50px;
      }
      .page-footer,
      .page-footer-space {
        height: 100px;
      }
      
      .page-footer {
        position: fixed;
        bottom: 0;
        width: 87.5%;
        margin-left:50px;
        border-top:1px solid #DDDDDD;
        padding:0 10px;
      }
      .page-header {
        position: fixed;
        top: 0mm;
        width: 100%;
      }
      .page {
        page-break-after: always;
      }
      /* @page {
        margin: 5cm;
      } */
      @media print {
        body {
        margin: 0;
        }
        table {
          page-break-inside: auto;
        }
        
        thead {
          display: table-header-group;
        }
        tfoot {
          display: table-footer-group;
        } 
        
              }
      /* my code
      } */
      
      table {
        font-size:12px;
      }
      table th,
      .heading
      {
      color:purple
      }
      table th,
   	  table td {
      padding: 6px;
      
    }
      #environment-table td,
      #environment-table th{
        border: 1px solid #DDDDDD;
      }
      #recommendations-table tbody td{
      	border: 1px solid #DDDDDD;
      }
      #recommendations-table thead > :not(:first-child) th{
        border: 1px solid #DDDDDD;
      }
      
    </style>
    </head>
  <body>
    <div class="page-header header">
      <h4>
      ITMAP
    </h4>
    <h5>
      Recommendations
    </h5>
    </div>
    <div class="page-footer">
      ITMAP.Inc
    </div>
    
    <section class="" style="padding:0 50px;margin-top:120px">
    <h5 class="heading" style="margin-top:20px">
  Recommendations
  </h5>
  <h6 style="margin-top:20px" class="heading">
  Your environment
  </h6>
  </section>
    <section style="padding:0 50px;">
    <table id="environment-table" style="padding:0 60px; margin: 0; width: 100%;">
      <thead>
        
        <tr>
          	<th>
        		Question
        	</th>
          <th>
        		Response
        	</th>
        </tr>
      </thead>
      <tbody class="page">
        @each(question in result.questions)
      <tr>
        <td>{{ question.question }}</td>
        <td>
          @each(option in question.options)                        
                        {{option.option}}
                        
                        @if(option.priority)
                        ({{option.priority}})
                        @endif

                        @if($loop.total != $loop.index+1)
                            ,
                        @endif                     
                    @endeach
        </td>
      </tr>
      @endeach
        
      </tbody>
    </table>
    <h5 class="heading" style="margin-top:20px;position:relative;top:80px">
        Our Recommendations
    </h5>
    <table id="recommendations-table" style="width: 100%;">
      <thead>
        <tr>
          <td colspan="2">
            <!--place holder for the fixed-position header-->
            <div class="page-header-space"></div>
          </td>
        </tr>
        <tr>
          	<th>
        		Vendor
        	</th>
          <th>
        		Product/Service
        	</th>
        </tr>
      </thead>
      <tbody class="page">
        @each(product in result.products)
      <tr>
        <td>{{ product.vendor }}</td>
        <td>{{ product.name }}</td>
      </tr>
      @endeach
        
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2">
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
      <div class="heading" style="margin-top:80px">
        <h5 style="font-weight:600">
          LIMITATION OF LIABILITY
        </h5>
